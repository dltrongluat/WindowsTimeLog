<Page x:Class="WpfTest.View_WP_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfTest"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="View_WP_Page">

    <Grid Margin="0,53,-159,0">
        <TextBox Name="ABC" Margin="0,-51,0,0">AA</TextBox>
        <ListView Name="wpListView">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Work Package Subject" Width="200" DisplayMemberBinding="{Binding subject}"></GridViewColumn>
                    <GridViewColumn Header="Time Logged" Width="100" DisplayMemberBinding="{Binding spentTime}" />
                    <GridViewColumn Width="100" Header="Log Time">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Width="50" FontSize="10" VerticalAlignment="Center" Height="50" Content="Log Time" Click="Button_Click"></Button>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
